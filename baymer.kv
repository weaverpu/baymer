<MyLayout>:
    size: root.width, root.height
    tab_pos: 'bottom_left'
    pos_hint: {'center_x': .5, 'center_y': .5}
    tab_width: 400
    do_default_tab: False

    TabbedPanelItem:
        text: 'Water'
        Button:
            text: '1 cup'
            on_press: root.press()
    TabbedPanelItem:
        text: 'Calories'
        Label:
            text: 'This will be the calorie interface'
    TabbedPanelItem:
        text: 'Map'
        Label:
            text: 'This will be the map interface'
    TabbedPanelItem:
        text: 'Inspiration'
        Label:
            text: 'This will be the inspiration interface'